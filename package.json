{
  "name": "secure-payments-portal",
  "version": "1.0.0",
  "description": "Secure Customer International Payments Portal for INSY7314 POE",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node server.js",
    "test": "jest",
    "test:employee": "jest __tests__/employee-portal.test.js",
    "test:all": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "security:audit": "npm audit",
    "security:scan": "npx audit-ci --config audit-ci.json",
    "security:deps": "snyk test --json --output-file=snyk-results.json",
    "security:all": "npm run security:audit && npm run security:scan",
    "security:fix": "npm audit fix && snyk wizard",
    "deps:check": "npx npm-check-updates",
    "deps:update": "npx npm-check-updates -u",
    "ssl:generate": "node scripts/generate-ssl-certs.js",
    "ssl:dev": "cross-env ENABLE_HTTPS=true npm run server",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "keywords": [
    "banking",
    "payments",
    "security",
    "react",
    "nodejs",
    "mongodb",
    "atlas",
    "mongoose"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@eslint/js": "^9.37.0",
    "argon2": "^0.31.2",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "connect-mongo": "^5.1.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.2",
    "express-slow-down": "^2.1.0",
    "express-validator": "^7.2.1",
    "globals": "^16.4.0",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.1",
    "morgan": "^1.10.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "audit-ci": "^6.6.1",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "eslint": "^8.57.1",
    "eslint-plugin-security": "^2.1.1",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.10",
    "npm-check-updates": "^17.1.12",
    "prettier": "^3.6.2",
    "snyk": "^1.1248.0",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
